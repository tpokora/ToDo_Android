<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="layoutBlackBackground">
        <item name="android:background">#000000</item>
    </style>

    <!-- Generic styles -->
    <style name="basicStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#000000</item>
    </style>

    <!-- Layouts style -->
    <style name="closestTaskTopic" parent="basicStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/taskFontSize</item>
    </style>

    <style name="closestTaskDate" parent="basicStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/taskDateFontSize</item>
    </style>

    <style name="closestTaskHeader" parent="basicStyle">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/closestTaskHeaderFontSize</item>
    </style>

    <style name="taskLayout" parent="basicStyle">
        <item name="android:padding">@dimen/taskPadding</item>
    </style>

    <style name="closestTaskLayout" parent="taskLayout">
        <item name="android:layout_marginBottom">60dp</item>
    </style>

    <style name="addTaskRowStyle">
        <item name="android:padding">20dp</item>
    </style>

    <!-- Buttons style -->
    <style name="buttonStyle" parent="basicStyle">
        <item name="android:padding">@dimen/buttonPadding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <!-- Add Task styles -->
    <style name="addTaskBasicStyle">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="addTaskLabelStyle" parent="addTaskBasicStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.30</item>
    </style>

    <style name="addTaskEditTextStyle" parent="addTaskBasicStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.70</item>
    </style>

    <!-- Task List styles -->
    <style name="taskListStyle">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:divider">#ff878787</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="taskDeleteButtonStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <!-- Other elements styles -->
    <style name="currentDateStyle" parent="basicStyle">
        <item name="android:padding">@dimen/currentDateTextViewPadding</item>
        <item name="android:textSize">@dimen/currentDateFontSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="addTaskTopic" parent="currentDateStyle">
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
